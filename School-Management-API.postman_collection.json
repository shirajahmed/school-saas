{
  "info": {
    "name": "School Management API",
    "description": "Complete authentication flow for School Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "schoolId",
      "value": "",
      "type": "string"
    },
    {
      "key": "setupToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. School Signup (Public)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"schoolName\": \"ABC International School\",\n  \"email\": \"admin@abcschool.com\",\n  \"phone\": \"+1234567890\",\n  \"password\": \"password123\",\n  \"address\": \"123 School Street, City\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/school-signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "school-signup"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('schoolId', response.schoolId);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "2. Login (Universal)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"admin@abcschool.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.refreshToken);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "3. Create User (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Teacher\",\n  \"email\": \"jane.teacher@abcschool.com\",\n  \"phone\": \"+1234567891\",\n  \"role\": \"TEACHER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/create-user",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "create-user"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('setupToken', response.setupToken);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "4. Create Student (Auto-creates Parent)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Alice\",\n  \"lastName\": \"Student\",\n  \"email\": \"alice.student@abcschool.com\",\n  \"phone\": \"+1234567892\",\n  \"role\": \"STUDENT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/create-user",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "create-user"]
            }
          }
        },
        {
          "name": "5. Setup Account (Complete Profile)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{setupToken}}\",\n  \"password\": \"newpassword123\",\n  \"phone\": \"+1234567891\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/setup-account",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "setup-account"]
            }
          }
        },
        {
          "name": "6. Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.refreshToken);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Role-based User Creation Examples",
      "item": [
        {
          "name": "Create Branch Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Bob\",\n  \"lastName\": \"BranchAdmin\",\n  \"email\": \"bob.admin@abcschool.com\",\n  \"role\": \"BRANCH_ADMIN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/create-user",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "create-user"]
            }
          }
        },
        {
          "name": "Create Parent (Manual)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Mary\",\n  \"lastName\": \"Parent\",\n  \"email\": \"mary.parent@gmail.com\",\n  \"phone\": \"+1234567893\",\n  \"role\": \"PARENT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/create-user",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "create-user"]
            }
          }
        }
      ]
    },
    {
      "name": "Login Examples",
      "item": [
        {
          "name": "Login with Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"jane.teacher@abcschool.com\",\n  \"password\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login with Phone",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"+1234567891\",\n  \"password\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    }
  ]
}
