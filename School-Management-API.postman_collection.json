{
  "info": {
    "name": "School Management API - Complete Flow",
    "description": "Complete authentication and onboarding flow for School Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "schoolId",
      "value": "",
      "type": "string"
    },
    {
      "key": "onboardingToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "setupToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Complete Onboarding Flow",
      "item": [
        {
          "name": "1. School Registration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"schoolName\": \"ABC International School\",\n  \"email\": \"admin@abcschool.com\",\n  \"phone\": \"+1234567890\",\n  \"password\": \"password123\",\n  \"address\": \"123 School Street, City\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/school-signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "school-signup"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('schoolId', response.schoolId);",
                  "    pm.collectionVariables.set('onboardingToken', response.onboardingToken);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "2. Get Onboarding Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/onboarding/status?token={{onboardingToken}}",
              "host": ["{{baseUrl}}"],
              "path": ["onboarding", "status"],
              "query": [
                {
                  "key": "token",
                  "value": "{{onboardingToken}}"
                }
              ]
            }
          }
        },
        {
          "name": "3. Step 1 - Basic School Info",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{onboardingToken}}\",\n  \"step\": 1,\n  \"stepData\": {\n    \"schoolType\": \"HIGH_SCHOOL\",\n    \"language\": \"en\",\n    \"academicYearStart\": 4,\n    \"logo\": \"https://example.com/logo.png\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/onboarding/step",
              "host": ["{{baseUrl}}"],
              "path": ["onboarding", "step"]
            }
          }
        },
        {
          "name": "4. Step 2 - Subscription Selection",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{onboardingToken}}\",\n  \"step\": 2,\n  \"stepData\": {\n    \"plan\": \"PROFESSIONAL\",\n    \"maxBranches\": 3,\n    \"features\": [\"attendance\", \"grades\", \"reports\", \"communication\"]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/onboarding/step",
              "host": ["{{baseUrl}}"],
              "path": ["onboarding", "step"]
            }
          }
        },
        {
          "name": "5. Step 3 - Payment Processing",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{onboardingToken}}\",\n  \"step\": 3,\n  \"stepData\": {\n    \"paymentMethod\": \"stripe\",\n    \"paymentToken\": \"tok_visa\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/onboarding/step",
              "host": ["{{baseUrl}}"],
              "path": ["onboarding", "step"]
            }
          }
        },
        {
          "name": "6. Complete Onboarding",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{onboardingToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/onboarding/complete",
              "host": ["{{baseUrl}}"],
              "path": ["onboarding", "complete"]
            }
          }
        },
        {
          "name": "7. Login to Dashboard",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"admin@abcschool.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.refreshToken);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Onboarding Helper Endpoints",
      "item": [
        {
          "name": "Get Subscription Plans",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/onboarding/plans",
              "host": ["{{baseUrl}}"],
              "path": ["onboarding", "plans"]
            }
          }
        },
        {
          "name": "Get School Types",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/onboarding/school-types",
              "host": ["{{baseUrl}}"],
              "path": ["onboarding", "school-types"]
            }
          }
        },
        {
          "name": "Get Languages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/onboarding/languages",
              "host": ["{{baseUrl}}"],
              "path": ["onboarding", "languages"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management Flow",
      "item": [
        {
          "name": "Create Teacher",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Teacher\",\n  \"email\": \"jane.teacher@abcschool.com\",\n  \"phone\": \"+1234567891\",\n  \"role\": \"TEACHER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/create-user",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "create-user"]
            }
          }
        },
        {
          "name": "Create Student",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Alice\",\n  \"lastName\": \"Student\",\n  \"email\": \"alice.student@abcschool.com\",\n  \"phone\": \"+1234567892\",\n  \"role\": \"STUDENT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/create-user",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "create-user"]
            }
          }
        }
      ]
    },
    {
      "name": "Password Reset Flow",
      "item": [
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@abcschool.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/forgot-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "forgot-password"]
            }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@abcschool.com\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"newpassword456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/reset-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "reset-password"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    }
  ]
}
